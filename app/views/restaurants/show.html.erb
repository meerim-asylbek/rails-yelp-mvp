<div class="container">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.category %></p>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>

  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
      <p>Rating: <%= review.rating %></p>
      <%= review.content %>
      </li>
    <% end %>
  </ul>
  <br>

  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: 'btn btn-success' %>
  <%= link_to "Back to homepage", restaurants_path, class: 'btn btn-primary' %>
</div>
